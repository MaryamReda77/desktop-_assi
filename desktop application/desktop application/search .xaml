<Page x:Class="desktop_application.search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:desktop_application"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="search">

    <Grid Background="#FFF8F5F5" Margin="0,0,70,0">
        <Label Content="city" HorizontalAlignment="Left" Margin="43,54,0,0" VerticalAlignment="Top" FontSize="24" Width="196"/>
        <TextBox x:Name="searchbox" HorizontalAlignment="Left" Margin="203,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" FontSize="24"/>
        <Button Content="search" HorizontalAlignment="Left" Margin="551,44,0,0" VerticalAlignment="Top" FontSize="36" Width="156" Click="Button_Click"/>
        <DataGrid  Name="data" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,171,130,138"/>
    </Grid>
</Page>
